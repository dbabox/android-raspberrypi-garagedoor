<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:layout_gravity="right|center_vertical"
                android:text="Internal IP:" />
            <EditText
                android:id="@+id/host"
                android:inputType="text"
                android:singleLine="true" />
            <TextView
                android:layout_gravity="right|center_vertical"
                android:text="Port:" />
            <EditText
                android:id="@+id/host_port"
                android:minEms="4"
                android:inputType="number"
                android:singleLine="true" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_gravity="right|center_vertical"
                android:text="External IP:" />
            <EditText
                android:id="@+id/external_ip"
                android:inputType="text"
                android:singleLine="true" />
            <TextView
                android:layout_gravity="right|center_vertical"
                android:text="Port:" />
            <EditText
                android:id="@+id/external_ip_port"
                android:minEms="4"
                android:inputType="number"
                android:singleLine="true" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_gravity="right|center_vertical"
                android:text="Wi-Fi network:" />
            <EditText
                android:id="@+id/network"
                android:layout_span="3"
                android:inputType="text"
                android:singleLine="true" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/check_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Turn off cellular data connection" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/check_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Turn off wi-fi" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/save"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Save" />
        <Button
            android:id="@+id/fetch"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Fetch\nCertificate" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wi-Fi network:" />
    <TextView
        android:id="@+id/wifi_network"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garage Door Services:" />
    <ListView
        android:id="@+id/list_svcs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Routers:" />
    <ListView
        android:id="@+id/list_routers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>